{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "tsx watch src/index.ts",
		"start": "node dist/index.js"
	},
	"dependencies": {
		"hono": "catalog:",
		"@hono/node-server": "^1.14.4",
		"@orpc/server": "catalog:",
