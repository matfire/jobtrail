		"better-auth": "catalog:",
		"dotenv": "catalog:",
		"zod": "^4.1.11",
		"@jobtrail/api": "workspace:*",
		"@jobtrail/auth": "workspace:*",
		"@jobtrail/db": "workspace:*"
	},
	"devDependencies": {
		"typescript": "^5.8.2",
		"tsx": "^4.19.2",
		"@types/node": "^22.13.11",
		"tsdown": "^0.16.5",
		"@jobtrail/config": "workspace:*"
	}
}
